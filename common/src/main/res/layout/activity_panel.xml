<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanelBaseActivity"
    android:background="@drawable/background_gradient">
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/app_name"
        android:textColor="@color/text_color_V1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

    </androidx.appcompat.widget.AppCompatTextView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/id_TXT_title"
        android:layout_marginTop="40dp"
        >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/id_IMG_main"
        android:layout_width="200dp"
        android:layout_height="200dp">

    </androidx.appcompat.widget.AppCompatImageView>
    </androidx.cardview.widget.CardView>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_TXT_VEW_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="@color/text_color_V1"
        android:textAlignment="center"
        android:layout_centerInParent="true">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_TXT_VEW_COUNT"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="35sp"
        android:textColor="#0B0000"
        android:layout_alignBottom="@id/id_TXT_VEW_counter"
        android:layout_marginBottom="20dp"
        android:text="Counter: ">

    </androidx.appcompat.widget.AppCompatTextView>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_TXT_VEW_days"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/text_color_V1"
        android:layout_below="@+id/id_TXT_VEW_counter"
        android:layout_alignStart="@+id/id_TXT_VEW_counter">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_TXT_VEW_DAYS"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="35sp"
        android:textColor="#0B0000"
        android:layout_alignBottom="@id/id_TXT_VEW_days"
        android:layout_marginBottom="10dp"
        android:text="Days: ">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_TXT_VEW_avg"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/text_color_V1"
        android:layout_below="@+id/id_TXT_VEW_days"
        android:layout_alignStart="@+id/id_TXT_VEW_days">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_TXT_VEW_AVG"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="20sp"
        android:paddingTop="15dp"
        android:gravity="center"
        android:textColor="#0B0000"
        android:layout_alignBottom="@id/id_TXT_VEW_avg"
        android:layout_marginBottom="10dp"
        android:text="@string/avg">

    </androidx.appcompat.widget.AppCompatTextView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/id_TXT_VEW_counter"
        android:layout_alignBottom="@+id/id_TXT_VEW_counter"
        android:layout_marginStart="100dp"
        app:cardCornerRadius="20dp">


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/id_BTN_plus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_add"
        android:scaleType="centerCrop"
        android:background="@color/background_color_button1"
        >


    </androidx.appcompat.widget.AppCompatImageButton>
</androidx.cardview.widget.CardView>

</RelativeLayout>